{
  "name": "yomiko-backend",
  "version": "0.1.0",
  "author": "js",
  "license": "UNLICENSED",
  "description": "Backend for the Yomiko app",
  "main": "",
  "scripts": {
    "build": "npx tsc && yarn run copy-locales && yarn run copy-templates",
    "start": "node build/src/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "NODE_ENV=test jest --verbose --detectOpenHandles --coverage --forceExit",
    "lint": "npx eslint `find . -name '*.ts' -not -path './node_modules/*'`",
    "lint:fix": "npx eslint `find . -name '*.ts' -not -path './node_modules/*'` --fix",
    "migration:up": "npx sequelize-cli db:migrate",
    "migration:down": "npx sequelize-cli db:migrate:undo",
    "migration:down:all": "npx sequelize-cli db:migrate:undo:all",
    "seed:up": "npx sequelize-cli db:seed:all",
    "seed:down": "npx sequelize-cli db:seed:undo",
    "copy-locales": "cp -R ./src/controllers/utils/mailer/locales/ ./build/src/controllers/utils/mailer/locales/",
    "copy-templates": "cp -R ./src/controllers/utils/mailer/templates/ ./build/src/controllers/utils/mailer/templates/"
  },
  "dependencies": {
    "@types/express": "^4.17.14",
    "@types/jest": "^29.5.1",
    "@types/node": "^18.11.9",
    "@types/nodemailer": "^6.4.7",
    "@types/passport": "^1.0.11",
    "@types/passport-jwt": "^3.0.7",
    "@types/sequelize": "^4.28.14",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/morgan": "^1.9.4",
    "@types/passport-local": "^1.0.34",
    "@types/supertest": "^2.0.12",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/ua-parser-js": "^0.7.36",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "argon2": "=0.27.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "handlebars": "^4.7.7",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.1",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.8.0",
    "pg-hstore": "^2.3.4",
    "redis": "^4.6.6",
    "sequelize": "^6.25.8",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.2",
    "typescript": "^5.0.4",
    "ua-parser-js": "^1.0.34",
    "winston": "^3.8.2",
    "yup": "^1.0.2"
  },
  "devDependencies": {
    "eslint": "^8.27.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.5.1",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.3.1",
    "sequelize-cli": "^6.5.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.3",
    "ts-node-dev": "^2.0.0"
  }
}
